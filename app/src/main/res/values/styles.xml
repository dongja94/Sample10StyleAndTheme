<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="TextTitleStyle.Shadow">
        <item name="android:textColor">#00f</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="ShadowTitleStyle" parent="TextTitleStyle">
        <item name="android:textColor">#00f</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="MyTextApearance" parent="android:TextAppearance">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>
